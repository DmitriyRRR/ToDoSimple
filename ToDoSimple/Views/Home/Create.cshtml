@using ToDoSimple.Models.Home;
@using ToDoSimple.Models;

@* @model Note *@
@model HomeViewModel

@{
    ViewBag.Title = "Add new note";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="shadow-sm p-3 mt-4 rounded bg-white">
        <form asp-action="Create">
                 <div class="col-4">
                     <span asp-validation-summary></span>
                <div action="form-floating">
                    <input asp-for="NoteName" type="text" class="form-control shadow-sm rounded"></input>
                    <label asp-for="NoteName">Note Name</label>
                </div>
                <span asp-validation-for="NoteName" class="text-danger"></span>
            </div>
            <div class="col-4">

                <div action="form-floating">
                    <input asp-for="NoteDescription" type="text" class="form-control shadow-sm rounded"></input>
                    <label asp-for="NoteDescription">Note Name</label>
                </div>
                <span asp-validation-for="NoteDescription" class="text-danger"></span>
            </div>
            <div class="col-1 aslign-items-center d-flex">
                <button class="btn btn-primary d-flex align-items-center justify-content-center shadow" type="submit">
                    Add
                </button>

            </div>

        </form>
    </div>
</body>