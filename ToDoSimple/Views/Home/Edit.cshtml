@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ToDoSimple.Models.Note;
@{
    ViewData["Title"] = "Edit note";
}
<div class="text-center">
    <form asp-action="Edit">
        <div class="col-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" type="text" class="form-control shadow-sm rounded" placeholder="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" type="text" class="form-control shadow-sm rounded" placeholder="@Model.Name" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsCompleted" class="control-label"></label>
                <input asp-for="IsCompleted" type="text" class="form-control shadow-sm rounded" placeholder="@Model.Name" />
                <span asp-validation-for="IsCompleted" class="text-danger"></span>
            </div>
        </div>
        <button class="btn btn-primary d-flex align-items-center justify-content-center shadow" type="submit">
            Add
        </button>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}