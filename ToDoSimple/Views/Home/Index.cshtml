@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ToDoSimple.Models.Pagination;
@using ToDoSimple.Controllers;
@model PaginatedList<ToDoSimple.Models.Note>;
@{
    ViewData["Title"] = "Home Page";
}
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<head>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Details.js"></script>
</head>

<div class="shadow-sm p-3 mt-4 rounded bg-white">
    @*
    <div class="row">
    <div class="col-1  p-3">
    <a href="#" id="some">
    <i class="fa-solid fa-bug"></i>
    </a>
    </div>
    <div class="col-1  p-3">
    <a href="/home/index2" id="gr">
    <i class="fa-solid fa-bug" style="color:forestgreen"></i>
    </a>
    </div>
    </div> *@

    <div class="row">
        <div class="col-8">
            <form asp-action="index" method="get">
                <div class="form-floating">
                    <p>
                        <input class="btn btn-outline-info w -75" type="submit" value="Search" /> |
                        <input type="text" name="SearchString" id="searchString" placeholder="input name" value="@ViewData["CurrentFilter"]" />
                        <a asp-action="Index">Back to Full List</a>
                    </p>
                </div>
            </form>
            <div class=" font-monospace">
                <tbody>
                    <div class="note shadow-sm p-3 mb-5 bg-body-tertiary rounded d-flex justify-content-between align-items-center">
                        <div class="col-1">
                            <span>
                                State
                            </span>
                        </div>
                        <div class="col-2 name">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]">Name</a>
                        </div>
                        <div class="col-2">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["EndDateSort"]">ExpireDate</a>
                        </div>
                        <div class="col-2">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["CreateDataSort"]">Create Date</a>
                        </div>
                        <div class="col-3 overflow-auto">
                            <span class="fs-0">Description</span>
                        </div>
                        <div class="edit col-1">
                            <i class="fa-solid fa-pencil" style="color:lightgray"></i>
                        </div>
                        <div class="col-1">
                            <a href="#">
                                <i class="fa-solid fa-trash-can" style="color:lightgrey"></i>
                            </a>
                        </div>
                    </div>
                    @foreach (var note in Model)
                    {
                        @await Html.PartialAsync("_PartialNoteView.cshtml", note)
                    }
            </div>
            <nav aria-label="Pagiantion">
                <ul class="pagination justify-content-center">

                    <link class="page-item">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="btn btn-default @prevDisabled" data-bs-toggle="tooltip" data-bs-placement="left" title="prev page">
                        &laquo
                    </a>
                    </li>
                    <link class="page-item">
                    <form asp-action="Index"
                          asp-route-sortOrder="@ViewData["CurrentSort"]"
                          asp-route-currentFilter="@ViewData["CurrentFilter"]">
                        <input type="number" min="1" max="@Model.TotalPages" name="pageNumber" value="@Model.PageIndex" placeholder="@Model.PageIndex" />
                        <input class="fa-solid w -50" type="submit" value="go" />
                    </form>
                    </li>
                    <link class="page-item">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="btn btn-default @nextDisabled" data-bs-toggle="tooltip" data-bs-placement="right" title="next page">
                        &raquo
                    </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Dropdown button
    </button>
    <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">Action</a></li>
        <li><a class="dropdown-item" href="#">Another action</a></li>
        <li><a class="dropdown-item" href="#">Something else here</a></li>
    </ul>
</div>

