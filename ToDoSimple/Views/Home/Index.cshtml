@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ToDoSimple.Models.Note>
@using ToDoSimple.Controllers;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="col-8">
        <table class="table table-borderless text-start">
            <tbody>
                <tr>
                    <th><u>Name</u></th>
                    <th><u>Description</u></th>
                    <th><u>Is Completed</u></th>
                    <th><u>Delete</u></th>
                    <th><u>Edit</u></th>
                    <th><u>Details</u></th>
                </tr>
                @foreach (var note in Model)
                {
                    <tr>
                        <th>@note.Name</th>
                        <th>@note.Description</th>
                        <th>@(note.IsCompleted ? "IsCompleted" : "ToDo")</th>
                        <th>
                            <a href="/home/delete/@note.Id">Delete</a>
                        </th>
                        <th>
                            <a href="/home/edit/@note.Id">Edit</a>
                        </th>
                        <th>
                            <a href="/home/details/@note.Id">Details</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<form class="mt-3" asp-controller="Home" asp-action="Create" method="get">
    <button class="btn btn-info w -100">Create new note</button>
</form>

<form class="mt-3" asp-controller="Account" asp-action="logout">
    <button class="btn btn-danger w -100">Logout</button>
</form>

