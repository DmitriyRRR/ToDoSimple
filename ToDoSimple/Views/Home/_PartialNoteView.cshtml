@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ToDoSimple.Models.Note

<div class="note shadow-sm p-3 mb-2 bg-body-tertiary rounded d-flex justify-content-between align-items-center text-center" style="background-color:#587aac;">
    <div class="col-1 p-1">
        <span>
            @(Model.IsCompleted ? "Done" : "In process")
        </span>
    </div>
    <div class="col-3 name p-2">
        <p class="d-inline-flex gap-1">
            <a data-bs-toggle="collapse" href="#collapseExample-@Model.Id" role="button" aria-expanded="false" aria-controls="collapseExample">
                    <span>@Model.Name</span>
            </a>
        </p>
    </div>
    <div class="col-2 p-2">
        <span>@Model.ExpireDate</span>
    </div>
    <div class="col-2 p-2">
        <span>@Model.CreatedTimestamp</span>
    </div>
    <div class="col-1">
        <a href="/home/edit/@Model.Id">
            <button class="btn text-secondary" data-bs-title="Редактировать" data-bs-toggle="tooltip">
                <i class="fa-solid fa-pencil" style="color:cadetblue"></i>
            </button>
        </a>
    </div>
    <div class="delete col-1">
        <button class="btn text-secondary" data-bs-title="Delete_note" data-bs-toggle="tooltip">
            <i class="fa-solid fa-trash-can"></i>
        </button>
    </div>
    <div class="deleteId d-none" id="delete-Id">@Model.Id</div>
</div>
<div class="collapse mb-3 pt-3" id="collapseExample-@Model.Id">
    <div class="card card-body">
        @Model.Description
    </div>
</div>
